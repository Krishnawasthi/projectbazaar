{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=1, stale-while-revalidate"
                }
            ]
        }
    ],
    "build": {
        "env": {
            "NEXT_PUBLIC_FORCE_TRAILING_SLASH": "true"
        }
    }
}